# Backend Environment Variables
# Copy this file to .env and update with your actual values
# Command: cp .env.example .env  (Linux/Mac)
# Command: copy .env.example .env  (Windows)

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For local MongoDB: mongodb://localhost:27017/expense-tracker
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database-name
MONGODB_URI=mongodb://localhost:27017/expense-tracker
# Alternative environment variable name (also supported)
MONGO_URI=mongodb://localhost:27017/expense-tracker

# JWT Authentication
# IMPORTANT: Generate strong random secrets (minimum 32 characters) for production!
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production-min-32-characters
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Frontend URL (for CORS configuration)
# Development: http://localhost:3000
# Production: https://your-frontend-domain.com
FRONTEND_URL=http://localhost:3000

# Rate Limiting
# Rate limiting is automatically disabled when NODE_ENV=development
# Set to 'true' to explicitly disable, 'false' to enable
DISABLE_RATE_LIMIT=true
# Maximum auth requests per 15 minutes (default: 15, recommended: 10 for production)
AUTH_RATE_LIMIT_MAX=15

# Logging
# Log levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# API Documentation (Swagger)
# URL for Swagger UI documentation
API_URL=http://localhost:5000

# Email Configuration (Optional - for email notifications)
# If not configured, email features will be skipped (no errors)
# For Gmail, use App Password: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# Push Notifications - VAPID Keys (Optional)
# Generate VAPID keys using: npm install -g web-push && web-push generate-vapid-keys

VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_EMAIL=mailto:your-email@example.com
